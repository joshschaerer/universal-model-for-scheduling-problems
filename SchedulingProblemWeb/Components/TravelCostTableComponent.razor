@using SchedulingProblem.Model

<div class="table-responsive" style="max-height: 90vh">
	<table class="table w-auto">
		<thead style="position: sticky; top: 0; z-index: 2; background-color: white;">
		<tr>
			<th scope="col" style="position: sticky; top: 0; left: 0; z-index: 3; background-color: white;">Person/Location</th>
			@foreach (var location in Locations)
			{
				<th scope="col">@location.Name</th>
			}
		</tr>
		</thead>
		<tbody>
		@foreach (var person in People)
		{
			<TravelCostRowComponent TravelCost="@TravelCost" Person="person" Locations="@Locations"/>
		}
		</tbody>
	</table>
</div>

@code {
	[Parameter] public int[,] TravelCost { get; set; }
	[Parameter] public List<Person> People { get; set; }
	[Parameter] public List<Location> Locations { get; set; }
}