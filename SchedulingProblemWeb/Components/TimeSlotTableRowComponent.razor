@using SchedulingProblem.Model

<tr>
    <td>
        <input type="text" name="timeSlotId" id="timeSlotId" value="@TimeSlot.Id" disabled>
    </td>
    <td>
        <input type="text" id="timeSlotDescription" @bind-value="@TimeSlot.Description"
            placeholder='Ex. "Monday, 8:30 - 9:30"'>
    </td>
    <td>
        <input type="button" id="timeSlotDelete" class="btn btn-danger" value="x"
            @onclick="() => DeleteMethod.InvokeAsync(TimeSlot.Id)">
    </td>
</tr>

@code {
    [Parameter] public TimeSlot? TimeSlot { get; set; }
    [Parameter] public EventCallback<int> DeleteMethod { get; set; }
}
