@using SchedulingProblem.Model
<tr>
    <td>
        <input type="text" name="skillId" id="skillsId" value="@Skill.Id" disabled>
    </td>
    <td>
        <input type="text" id="skillDescription" value="@Skill.Description" placeholder='Ex. "Music"'>
    </td>
    <td>
        <input type="button" id="skillDelete" class="btn btn-danger" value="x"
            @onclick="() => DeleteMethod.InvokeAsync(Skill.Id)">
    </td>
</tr>

@code {
    [Parameter] public Skill Skill { get; set; }
    [Parameter] public EventCallback<int> DeleteMethod { get; set; }
}
